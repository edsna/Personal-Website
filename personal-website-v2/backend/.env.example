# Backend Environment Variables

# API Configuration
PORT=8000
HOST=0.0.0.0
ENVIRONMENT=development  # development | staging | production

# LLM API Keys (at least one required)
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# Redis Configuration (for rate limiting)
REDIS_URL=redis://localhost:6379/0

# Rate Limiting Configuration
MAX_TOKENS_PER_DAY=50
MAX_REQUESTS_PER_MINUTE=3
MAX_MESSAGES_PER_DAY=10

# PostgreSQL Database (optional, for analytics)
DATABASE_URL=postgresql://user:password@localhost:5432/edson_portfolio

# Vector Database (for RAG)
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=
CHROMA_PERSIST_DIRECTORY=./chroma_db

# Monitoring
PROMETHEUS_ENABLED=true
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://edsonzandamela.com,https://www.edsonzandamela.com

# Security
JWT_SECRET=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# External Services
GITHUB_TOKEN=  # Optional, for fetching GitHub projects
LINKEDIN_ACCESS_TOKEN=  # Optional, for LinkedIn integration
